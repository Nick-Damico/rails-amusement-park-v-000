<p id="notice">Welcome back to the theme park!</p>

<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

<div class="center">
 
  <div class="info">
  	<% if admin?(@user) %>
  		<p><strong>ADMIN</strong></p>
  	<% end %>
    <p><strong>Name: </strong><%= @user.name %></p>
    <p><strong>Tickets: </strong><%= @user.tickets %></p>
    <p><strong>Mood: </strong><%= @user.mood %></p>
    <p><strong>Height: </strong><%= @user.height %> inches</p>
    <!-- <p><a href="/users/251/edit">Edit</a></p> -->
    <p><a href="/attractions">See attractions</a></p>
  </div>
</div>
