<ul>
	<li><strong>Name: </strong><%= @attraction.name %></li>
	<li><strong>Ticket Requirement: </strong><%= @attraction.tickets %></li>
	<li><strong>Height Requirement: </strong><%= @attraction.min_height %></li>
	<li><strong>Nausea Rating: </strong><%= @attraction.nausea_rating %></li>
	<li><strong>Happy Rating: </strong><%= @attraction.happiness_rating %></li>
</ul>

<%= link_to "Back", attractions_path, :class => "btn btn-primary" %>

<% if current_user.admin %>
	<%= link_to "Edit Attraction", edit_attraction_path(@attraction), :class => "btn btn-danger" %>
<% else %>
	<%= form_tag user_path(current_user),:method => "get" do %>
		<%= hidden_field_tag :'attraction[id]', @attraction.id %>
		<%= submit_tag "Go on this ride", :class => "btn btn-primary" %>
	<% end %>
<% end %>